{# src/Sukaldaris/InfoBundle/Resources/views/Info/receta.html.twig #}
{% extends '::base.html.twig' %}
{% block title %}{{receta.titulo}}{% endblock %}

{% block body %}

	<div id="top">

		<div id="topLeft">
		    <h1>{{receta.titulo}}</h1><h2>(autor)</h2>

		    {% for palabra in palabras %}

		    <a class="palabraClave" href=# > #{{palabra.palabra}}, </a>

		    {% endfor %}
		    
		    {% if receta.IdChef > 0 %}

		    <a class="chef" href=#> {{receta.IdChef.Nombre}} {{receta.IdChef.Apellidos}}</a>

		    {% endif %}

		    

		</div>{# div topLeft#}

    </div>{# div top#}
	</br><p>Trailer:</p>

	<iframe width="560" height="315" src='{{pelicula.LinkTrailer}}' frameborder="0" allowfullscreen></iframe>
   
   	<p>Personajes de esta pelicula:</p>
   	<div style = "width: 100%">
	{% for personaje in personajes %}
	    {% if personaje.IdCasa.id < 5 %}
			â€‹<div class ="foto">
				<a href="{{ path('hp_personaje', { 'id': personaje.Id }) }}">
				<img src= "{{asset('images/'~personaje.IdCasa.Nombre~'/'~personaje.Foto~'')}}" width="100" height="100">
				</a>
			</div>
		{%else%}
			<div class ="foto">
				<a href="{{ path('hp_personaje', { 'id': personaje.Id }) }}">
				<img href="{{ path('hp_personaje', { 'id': personaje.Id }) }}" src= "{{asset('images/otros/'~personaje.Foto~'')}}" width="100" height="100">
				</a>
			</div>
		{% endif %}
	{% else %}
        <p>No hay personajes en esta pelicula </p>                                                 
	{% endfor %}
	</div>

{% endblock %}